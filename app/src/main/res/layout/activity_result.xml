<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.Activity_result"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:src="@drawable/icon_result"
        android:id="@+id/imgRes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bạn đạt được"
        android:id="@+id/tvGet"
        android:layout_gravity="center_horizontal"
        android:textColor="#1c9470"
        android:textStyle="bold"
        android:textSize="35sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Score"
        android:gravity="center"
        android:id="@+id/tvResult"
        android:layout_weight="0.10"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#d30505" />

    <Button
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Xem Đáp án"
        android:id="@+id/btnXemDapAn"
        android:background="#467ed7"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Xem lại bài"
        android:id="@+id/btnReview"
        android:layout_gravity="center_horizontal"
        android:background="#50c6d8"
        android:textStyle="bold" />

    <Button
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:text="Lưu điểm"
        android:id="@+id/btnSave"
        android:layout_gravity="center_horizontal"
        android:background="#0edd95"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Trở về Menu"
        android:id="@+id/btnAgain"
        android:background="#525174"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

</LinearLayout>
